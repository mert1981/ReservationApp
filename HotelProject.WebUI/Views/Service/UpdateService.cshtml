@model UpdateServiceDto

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <input type="hidden" asp-for="ServiceId" />

    <h1 class="text-center">Hizmeti Güncelle</h1>

    <div>
        <label>Hizmet İkonu</label>
        <input type="text" asp-for="ServiceIcon" class="form-control" />
        <span class="text-center" asp-validation-for="ServiceIcon" > </span>
    </div>
    <div>
        <label>Hizmet Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Title" ></span>
    </div>
    <div>
        <label>Hizmet Açıklaması </label>
        <input type="text" asp-for="Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Description" > </span>
    </div>
   
    <button class="btn mb-1 btn-rounded btn-outline-success d-flex justify-content-center">Hizmeti Güncelle</button>
</form>


